@using BlazorApp.Pages.Components
@inherits LayoutComponentBase

<PageTitle>LinguaReader</PageTitle>

<RadzenLayout>
    <RadzenHeader>
        <RadzenRow AlignItems="AlignItems.Center" Style="height: 100%;">
            <RadzenColumn Size="12" SizeMD="3">

            </RadzenColumn>
            <RadzenColumn Size="12" SizeMD="6">
                <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Center" AlignItems="AlignItems.Center">
                    <AuthorizeView>
                        <Authorized>
                            <NavLink>
                                <RadzenLink Path="@Routes.Reading" Text="Reading" />
                            </NavLink>
                            <NavLink>
                                <RadzenLink Path="@Routes.Learning" Text="Learning" />
                            </NavLink>
                        </Authorized>
                        <NotAuthorized>
                            <NavLink>
                                <RadzenLink Path="@Routes.Registration" Text="Register" />
                            </NavLink>
                            <NavLink ActiveClass="rz-p-8" class="">
                                <RadzenLink style="font-size: 1.6rem" Path="@Routes.Login" Text="Log in" />
                            </NavLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </RadzenStack>
            </RadzenColumn>
            <RadzenColumn Size="12" SizeMD="3">
                <RadzenStack class="rz-pr-12" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Right" AlignItems="AlignItems.Center">
                    <AuthorizeView>
                        <Authorized>
                            <NavLink>
                                <RadzenLink Icon="person" Path="@Routes.Profile" Text="Profile" />
                            </NavLink>
                            @* Hello, @context.User.Identity.Name! *@
                            <NavLink>
                                <RadzenLink Path="@Routes.Logout" Text="Log out" />
                            </NavLink>
                        </Authorized>
                    </AuthorizeView>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody>
        @Body
    </RadzenBody>
</RadzenLayout>

<RadzenDialog />
<RadzenNotification />