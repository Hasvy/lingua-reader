<RadzenCard Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10 flex-center" Style="width: 100%; max-width: 520px; height: 100%; max-height: 320px; overflow: hidden; ">
    <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H2" Class="rz-m-0">@WordsToLearn[ActualCardNumber].WordWithTranslations.DisplaySource</RadzenText>
</RadzenCard>

<RadzenStack Style="width: 100%;" class="rz-text-align-center" >
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenColumn Size="3">
            <RadzenButton Click="@(() => ChooseVariant(buttons[0], WordsToLearn[ActualCardNumber].VariantsToAnswer[0]))"
                          Style="width: 100%" Size="ButtonSize.Large" Variant="Variant.Outlined" @ref="buttons[0]"
                          Text="@WordsToLearn[ActualCardNumber].VariantsToAnswer[0].Text.DisplayTarget">
            </RadzenButton>
        </RadzenColumn>
        <RadzenColumn Size="3">
            <RadzenButton Click="@(() => ChooseVariant(buttons[1], WordsToLearn[ActualCardNumber].VariantsToAnswer[1]))"
                          Style="width: 100%" Size="ButtonSize.Large" Variant="Variant.Outlined" @ref="buttons[1]"
                          Text="@WordsToLearn[ActualCardNumber].VariantsToAnswer[1].Text.DisplayTarget">
            </RadzenButton>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow JustifyContent="JustifyContent.Center">
        <RadzenColumn Size="3">
            <RadzenButton Click="@(() => ChooseVariant(buttons[2], WordsToLearn[ActualCardNumber].VariantsToAnswer[2]))"
                          Style="width: 100%" Size="ButtonSize.Large" Variant="Variant.Outlined" @ref="buttons[2]"
                          Text="@WordsToLearn[ActualCardNumber].VariantsToAnswer[2].Text.DisplayTarget">
            </RadzenButton>
        </RadzenColumn>
        <RadzenColumn Size="3">
            <RadzenButton Click="@(() => ChooseVariant(buttons[3], WordsToLearn[ActualCardNumber].VariantsToAnswer[3]))"
                          Style="width: 100%" Size="ButtonSize.Large" Variant="Variant.Outlined" @ref="buttons[3]"
                          Text="@WordsToLearn[ActualCardNumber].VariantsToAnswer[3].Text.DisplayTarget">
            </RadzenButton>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>

@if (_isDelaying)
{
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 1000;"></div>
}