@using Objects.Constants;

<RadzenDropDown @bind-Value="Language" TValue="string" Data="@Data">
    <Template Context="language">
        @if (language != string.Empty)
        {
            @ConstLanguages.GetFullLang(language) <img src="@ConstLanguages.GetFlagPath(language)" />
        }
    </Template>
</RadzenDropDown>