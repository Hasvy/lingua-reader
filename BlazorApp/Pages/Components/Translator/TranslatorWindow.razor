@using System.Globalization;

@if (!string.IsNullOrWhiteSpace(WordInfo.Word) && Hidden is false)
{
    <RadzenCard id="translator-window" class="translator-window" Style=@($@"position: absolute; padding: 0px 10px 0px 10px;
                                                  
                                                  left: {(WordInfo.Left - 10).ToString(CultureInfo.InvariantCulture)}px;
                                                  top: {WordInfo.Top.ToString(CultureInfo.InvariantCulture)}px; z-index: 10;")>
        <RadzenRow>
            <RadzenColumn Size="10">
                @if (ResponseContent is not null)
                {
                    if (mainTranslation is not null)
                    {
                        <RadzenRow>
                            <strong>@mainTranslation.DisplayTarget</strong>
                        </RadzenRow>
                        foreach (var posTag in dict)
                        {
                            <RadzenRow>
                                <RadzenColumn Size="4">
                                    @posTag.Key
                                </RadzenColumn>
                                <RadzenColumn Size="8">
                                    @posTag.Value
                                </RadzenColumn>
                            </RadzenRow>
                        }
                    }
                }
            </RadzenColumn>
            <RadzenColumn Size="2">
                <RadzenRow>
                    Listen
                </RadzenRow>
                <RadzenRow>
                    Add
                </RadzenRow>
            </RadzenColumn>
        </RadzenRow>
    </RadzenCard>
}
else
{
    
}
