@attribute [Route(Routes.Read)]

@_actualPageNumber / @pagesCount
<RadzenNumeric ShowUpDown="false" Style="width: 30px" TValue="int" Value=@_actualPageNumber Change="@(pageNumber => ChangePage(pageNumber))" />
<div style="display: flex; justify-content: center">
    <RadzenStack Gap="0" Wrap="FlexWrap.Wrap" Orientation="Orientation.Horizontal">
        <RadzenButton Icon="arrow_back_ios_new" Click=@(args => PreviousPage()) />     @*TODO Fix icon*@
        <RadzenButton Icon="arrow_forward_ios" Click="NextPage" />
    </RadzenStack>
</div>

<div style="display: flex; justify-content: center; align-items: center">
    <RadzenCard Style="width: 60%; height: 600px; position: center">
        @*<RadzenText Style="height: 100%;" TextAlign="TextAlign.Justify">*@
        <iframe sandbox="allow-same-origin" style="width: 100%; height: 100%; border: none;" id="iframe-container">     @*Possible security problem with iframe*@
            @*Text of a book*@
        </iframe>
        @*</RadzenText>*@
    </RadzenCard>
</div>