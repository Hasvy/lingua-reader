@page "/ForgotPassword"
@attribute [AllowAnonymous]

@using Microsoft.AspNetCore.Components.Forms
@using Services.Authentication;
@using Objects.Dto.Authentication;

<RadzenStack Gap="0" Class="rz-my-12 rz-mx-auto rz-border-radius-6 rz-shadow-10" Style="width: 100%; max-width: 520px; overflow: hidden;">
    <RadzenCard Class="rz-shadow-0 rz-border-radius-0 rz-background-color-primary rz-p-12" style="text-align: center;">
        <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H2" Class="rz-color-white rz-m-0">Forgot Password</RadzenText>
    </RadzenCard>
    <RadzenCard Class="rz-shadow-0 rz-p-8">
        <RadzenTemplateForm TItem="ForgotPasswordDto" Data="_forgotPasswordDto" Submit="SendEmail">
            <DataAnnotationsValidator />
            <RadzenStack Gap="1rem" class="rz-p-sm-8">
                <RadzenFormField Text="Email" Variant="Variant.Outlined">
                    <ChildContent>
                        <RadzenTextBox Name="Email" @bind-Value=_forgotPasswordDto.Email/>
                    </ChildContent>
                    <Helper>
                        <ValidationMessage For="@(() => _forgotPasswordDto.Email)" />
                    </Helper>
                </RadzenFormField>
                <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <RadzenButton ButtonType="ButtonType.Submit" Size="ButtonSize.Large" Text="Submit"></RadzenButton>
                </RadzenRow>
            </RadzenStack>
        </RadzenTemplateForm>
    </RadzenCard>
</RadzenStack>
